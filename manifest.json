{
  "name": "You Like that Don't You?",
  "version": "0.1.0",
  "manifest_version": 2,
  "description": "This cheeky extension makes a sound when you like something on your favorite social media sites",
  "homepage_url": "https://github.com/pbojinov/you-like-that",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "permissions": ["tabs", "webNavigation", "https://a.clyp.it/4wdkdhn5.mp3"],
  "content_scripts": [
    {
      "matches": [
        "*://*.instagram.com/*", "*://*.facebook.com/*", "*://*.twitter.com/*"
      ],
      "js": [
        "js/jquery/jquery.min.js",
        "src/inject.js"
      ]
    }
  ]
}